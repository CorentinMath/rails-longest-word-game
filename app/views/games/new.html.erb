<h1>New Game</h1>
<ul class="list-inline text-center">
  <% @letters.each do |letter| %>
  <li <strong><%= letter %></strong></li>
  <% end %>
</ul>
<!-- <p><%= @letters %></p> -->

<form action="/score" method="post" class="form-inline">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="">
  <input type="submit" value="Play" class="btn btn-success">
</form>
